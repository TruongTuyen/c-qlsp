@model TT_QLSP2.Models.EF.NhomSanPham

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/__MainLayout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Nhóm sản phẩm</h4>
    
    <div class="panel panel-default">
        <div class="panel-heading">
            Chi tiết
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Tên Nhóm</th>
                            <th>Mô tả</th>
                            <th>Ảnh</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.TenNhom)</td>
                            <td>@Html.DisplayFor(model => model.MoTa)</td>
                            <td>
                                
                                <div style="width:150px; height:150px; background: url(/@Html.DisplayFor(model => model.Anh)) center center no-repeat; background-size: cover;"></div>
                            </td>
                        </tr>

                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
